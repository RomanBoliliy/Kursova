<Window x:Class="KR.SignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KR"
        mc:Ignorable="d"
        Title="SignUp" Height="450" Width="800">
    
    <Grid Background="AliceBlue">
        <Border Background="White" MinWidth="350" MaxWidth="450" VerticalAlignment="Center" Padding="10" CornerRadius="25">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="Gray" ShadowDepth="1"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Регістрація" TextAlignment="Center" FontSize="30" FontFamily="Verdana" Margin="20 20 20 0" />
                <TextBox x:Name="TextBoxLogin"  Margin="10" />
                <PasswordBox  x:Name="PasswordBox"  Margin="10" />
                <PasswordBox  x:Name="PasswordBox2" Margin="10" />
                <Button Content="Зареєструватися" Margin="10" Click="Button_SignUp_Click" />
                <Button Content="Зареєструватися як адмін" Margin="10" Click="Button_SignUp_Admin_Click" />
                <Button Content="Назад" Margin="10" Click="Button_Back_Click" />
            </StackPanel>
        </Border>

    </Grid>
</Window>
